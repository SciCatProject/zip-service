<!DOCTYPE html>
<html lang="en">
<head>
    <link rel="stylesheet" type="text/css" href="css/zipping.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://cdn.rawgit.com/kimmobrunfeldt/progressbar.js/0.5.6/dist/progressbar.js"></script>
    <script>
      $( document ).ready(function() {
        var line = new ProgressBar.Line('#progressbar')
        iId = setInterval(function() {poll(line)}, 500);
          });
      function poll(line){
        $.get( "/zip/polling" ).done(function( data ){
          if (data && data.startsWith("/download")){
            clearInterval(iId);
            $( "#status").html("<a target='_blank' href='" + data + "'>Download</a>");
          }else{
            console.log(data + "/" + <%= total %>);
            line.animate(parseFloat(data) / parseFloat(<%= total %>));
          }
          
        });
      }
    </script>
</head>
<body>
  <div class="zipping">
   <div>Please wait, the files are being zipped</div>
    <div><img src="images/rolling.gif"></div>
    <div id="progressbar"></div>
    <div id="status"></div>
  </div>
</body>
</html>