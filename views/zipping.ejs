<!DOCTYPE html>
<html lang="en">
<head>
    <link rel="stylesheet" type="text/css" href="css/zipping.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://cdn.rawgit.com/kimmobrunfeldt/progressbar.js/0.5.6/dist/progressbar.js"></script>
    <script>
      $( document ).ready(function() {
        var circle = new ProgressBar.Circle('#progressbar', {
          strokeWidth: 20,
          easing: 'easeInOut',
          duration: 1400,
          color: '#3261ad',
          trailColor: '#eee',
          trailWidth: 20,
          svgStyle: null
        });
        iId = setInterval(function() {poll(circle)}, 500);
        $( "#status").html("0/" +  <%= total %>);
      });
      function poll(circle){
        $.get( "/zip/polling" ).done(function( data ){
          if (data && data.startsWith("/download")){
            clearInterval(iId);
            circle.animate(1);
            $( "#status").html("<a target='_blank' href='" + data + "'>Download</a>");
            $( "#title").html("Done!");
            
          }else{
            console.log(data + "/" + <%= total %>);
            circle.animate(parseFloat(data) / parseFloat(<%= total %>));
            $( "#status").html(data + "/" +  <%= total %>);
          }
          
        });
      }
    </script>
</head>
<body>
  <div class="zipping">
   <div id="title">Please wait, the files are being zipped..</div>
    <div  style="width: 100px;  margin: 20px auto 20px auto;" id="progressbar"></div>
    <div id="status"></div>
  </div>
</body>
</html>